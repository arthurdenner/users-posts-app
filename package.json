{
  "name": "users-posts-app",
  "version": "1.0.0",
  "description": "A simple React app that makes uses of the JSONPlaceholder API",
  "main": "src/index.tsx",
  "repository": {
    "type": "git",
    "url": "https://github.com/arthurdenner/users-posts-app.git"
  },
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "lint:css": "stylelint src/**/*.less",
    "lint": "eslint \"src/**/*.+(js|jsx|ts|tsx)\"",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier \"**/*.+(js|jsx|json|less|ts|tsx|md)\"",
    "prettier:check": "npm run prettier -- --list-different",
    "prettier:format": "npm run prettier -- --write",
    "start": "webpack-dev-server --mode development",
    "build": "webpack --mode production"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": {
    "name": "Arthur Denner",
    "email": "arthurdenner7@gmail.com"
  },
  "license": "MIT",
  "browserslist": [
    "chrome >= 56",
    "firefox >= 51",
    "edge >= 14"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "stylelint": {
    "plugins": [
      "stylelint-no-unsupported-browser-features"
    ],
    "rules": {
      "plugin/no-unsupported-browser-features": true
    },
    "defaultSeverity": "error"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-router-dom": "^4.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@types/jest": "^23.3.13",
    "@types/react": "^16.7.20",
    "@types/react-dom": "^16.0.11",
    "@types/react-router-dom": "^4.3.1",
    "@types/webpack-env": "^1.13.6",
    "@typescript-eslint/eslint-plugin": "^1.0.0",
    "@typescript-eslint/parser": "^1.0.0",
    "autoprefixer": "^9.4.6",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^1.0.1",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "1.0.1",
    "dotenv": "^6.2.0",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-compat": "^2.6.3",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "jest-dom": "^3.0.1",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "lint-staged": "^8.1.0",
    "mini-css-extract-plugin": "^0.5.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.16.0",
    "react-hot-loader": "^4.6.3",
    "react-testing-library": "^5.4.4",
    "style-loader": "^0.23.1",
    "stylelint": "^9.10.1",
    "stylelint-no-unsupported-browser-features": "^3.0.2",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.4",
    "typings-for-css-modules-loader": "^1.7.0",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  }
}
